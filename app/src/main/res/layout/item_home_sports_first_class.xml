<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sport_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/basket" />

    <TextView
        android:id="@+id/sport_type"
        fontPath="fonts/agency-fb-bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:shadowColor="#7F000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:text="BASKETBALL"
        android:textColor="@color/white"
        android:textSize="@dimen/home_listview_big_font" />

    <TextView
        android:id="@+id/event_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_light_green_background"
        android:padding="8dp"
        android:text="9 EVENMENTS"
        android:textColor="@color/white"
        android:textSize="@dimen/home_listview_small_font"
        fontPath="fonts/agency-fb-bold.ttf" />
</RelativeLayout>
